<element type="element" group="Core" hidden="false">
    <name>JBZOO_ELEMENT_HOOK_SDEKORDER_NAME</name>
    <author>JBZoo.com</author>
    <creationDate>2014</creationDate>
    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZOO_ELEMENT_HOOK_SDEKORDER_DESC</description>

    <params>
        <param name="debug" type="jbbool" default="0" label="JBZOO_ELEMENT_PAYMENT_DEBUG"
               description="JBZOO_ELEMENT_PAYMENT_DEBUG_DESC"/>

        <param name="items_params" type="jbspacer" default="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAMS"/>

        <param name="shipping_type" type="list" default="none" label="JBZOO_ELEMENT_HOOK_SDEKORDER_TYPE" description="JBZOO_ELEMENT_HOOK_SDEKORDER_TYPE_DESC">
            <option value="1">JBZOO_ELEMENT_HOOK_SDEKORDER_TYPE_SHOP</option>
            <option value="2">JBZOO_ELEMENT_HOOK_SDEKORDER_TYPE_DELIVERY</option>
        </param>

        <param name="item_price" type="text" label="JBZOO_ELEMENT_HOOK_SDEKORDER_PRICE" description="JBZOO_ELEMENT_HOOK_SDEKORDER_PRICE_DESC" />

        <param name="prefix" type="text" label="JBZOO_ELEMENT_HOOK_SDEKORDER_PREFIX" description="JBZOO_ELEMENT_HOOK_SDEKORDER_PREFIX_DESC" />

        <param name="source" type="radio" default="price" label="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_SOURCE" description="">
            <option value="price">JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_SOURCE_PRICE</option>
            <option value="elements">JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_SOURCE_ELEMENTS</option>
        </param>

        <param name="@elements" type="jbspacer" default="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_SEPARATOR_ELEMENTS" />

        <param name="element_weight" type="jbelementlist" types="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_ELEMENTS_WEIGHT"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_ELEMENTS_WEIGHT_DESC"/>

        <param name="@defaults" type="jbspacer" default="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_SEPARATOR_DEFAULT" />

        <param name="default_weight" type="text" default="0.1" label="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_DEFAULT_WEIGHT"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_PARAM_DEFAULT_WEIGHT_DESC"/>

        <param name="items_sender" type="jbspacer" default="JBZOO_ELEMENT_HOOK_SDEKORDER_SPACER_SENDER"/>
        <param name="sender_company" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_COMPANY" 
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_COMPANY_DESC"/>
        <param name="sender_name" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_NAME" 
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_NAME_DESC"/>
        <param name="sender_email" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_EMAIL" 
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_EMAIL_DESC"/>
        <param name="sender_phone" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_PHONE" 
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_PHONE_DESC"/>
        <param name="sender_address" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_ADDRESS" 
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_ADDRESS_DESC"/>
        <param name="sender_phone" type="text" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_PHONE"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_SENDER_PHONE_DESC"/>

        <param name="items_receiver" type="jbspacer" default="JBZOO_ELEMENT_HOOK_SDEKORDER_SPACER_RECEIVER"/>
        <param name="receiver_name" type="jbcartfields" group="CONFIG_FIELDS" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_NAME" position="DEFAULT_POSITION"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_NAME_DESC"/>
        <param name="receiver_email" type="jbcartfields" group="CONFIG_FIELDS" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_EMAIL" position="DEFAULT_POSITION"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_EMAIL_DESC"/>
        <param name="receiver_phone" type="jbcartfields" group="CONFIG_FIELDS" default="" label="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_PHONE" position="DEFAULT_POSITION"
                description="JBZOO_ELEMENT_HOOK_SDEKORDER_RECEIVER_PHONE_DESC"/>
    </params>

</element>
